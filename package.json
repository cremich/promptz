{
  "name": "promptz",
  "version": "0.1.0",
  "description": "Promptz is the ultimate prompting hub for Amazon Q Developer, designed to help you discover, create, and perfect your prompts for every step of the software development lifecycle.",
  "author": {
    "name": "Christian Bonzelet",
    "email": "christian.bonzelet@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cremich/promptz"
  },
  "scripts": {
    "dev": "hugo server --buildDrafts --buildFuture --disableFastRender --enableGitInfo",
    "build": "npm run build:basecoat:js && npm run build:basecoat:css && npm run build:og-images && hugo --minify --enableGitInfo && npm run build:search",
    "build:search": "pagefind",
    "build:basecoat:js": "cp 'node_modules/basecoat-css/dist/js/all.js' assets/js/basecoat.js",
    "build:basecoat:css": "cp 'node_modules/basecoat-css/dist/basecoat.css' assets/css/basecoat.css",
    "build:og-images": "node scripts/generate-og-images.js",
    "validate": "hugo --buildDrafts --buildFuture --quiet --enableGitInfo",
    "validate:prompts": "tsx scripts/validate-prompts.ts",
    "validate:taxonomies": "node scripts/validate-taxonomies.js",
    "lint:content": "node scripts/validate-content.js",
    "preview": "npm run build && hugo server --source public",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.7.1",
    "@tailwindcss/cli": "^4.1.14",
    "basecoat-css": "^0.3.2",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "lint-staged": "^16.1.2",
    "pagefind": "^1.0.0",
    "prettier": "3.6.2",
    "prettier-plugin-go-template": "^0.0.15",
    "puppeteer": "^24.26.1",
    "tailwindcss": "^4.1.14",
    "tailwindcss-animate": "^1.0.7"
  },
  "engines": {
    "npm": ">=6.14.4",
    "node": ">=14.0.0"
  }
}
